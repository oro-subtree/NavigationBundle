{% extends 'OroUIBundle:actions:update.html.twig' %}

{% set formAction = app.request.uri %}

{% oro_title_set({params : {"%entity.key%": entity.key, "%entityName%": 'oro.navigation.menuupdate.entity_label'|trans }}) %}
{% set entityId = entity.id %}

{% block navButtons %}
    {% if entity.key and resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('oro_api_delete_menuupdates', {menuName: menuName, key: app.request.get('key')}),
            'dataRedirect': path('oro_navigation_menu_update_view', {menuName: menuName}),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-attribute',
            'entity_label': 'oro.navigation.menuupdate.entity_label'|trans,
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {% if resource_granted('oro_navigation_menu_update_update') %}
        {% set html = UI.saveAndCloseButton({
            'route': 'oro_navigation_menu_update_update',
            'params': {'menuName': '$menu', 'parentKey': '$parentKey', 'key': '$key'}
        }) %}
    {% endif %}
    {% if resource_granted('oro_navigation_menu_update_create') %}
        {% set html = html ~ UI.saveAndNewButton({
            'route': 'oro_navigation_menu_update_create',
            'params': {'menuName': '$menu', 'parentKey': '$parentKey'}
        }) %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if entityId %}
        {% set breadcrumbs = {
            'entity': entity,
            'indexPath': app.request.uri,
            'indexLabel': 'oro.navigation.menuupdate.entity_plural_label'|trans,
            'entityTitle': entity.key
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'oro.navigation.menuupdate.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'menu-update-form' %}

    {% set dataBlocks = [{
        'title': 'General Information'|trans,
        'class': 'active',
        'subblocks': [
            {
                'title': '',
                'data': [
                    form_row(form.titles),
                    form_row(form.uri),
                    form_row(form.key),
                    form_row(form.active)
                ]
            }
        ]
    }] %}

    {% set additionalData = [] %}
    {% for child in form.children if child.vars.extra_field is defined and child.vars.extra_field %}
        {% set additionalData = additionalData|merge([form_row(child)]) %}
    {% endfor %}
    {% if additionalData is not empty %}
        {% set dataBlocks = dataBlocks|merge([{
            'title': 'Additional'|trans,
            'subblocks': [{
                'title': '',
                'useSpan': false,
                'data' : additionalData
            }]
        }] ) %}
    {% endif %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}

    <div class="menuitem-container tree-component-container">
        <div class="menuitem menuitem-tree tree-component">
            {% set treeOptions = {
                'data' : tree,
                'menu' : menuName,
                'updateAllowed' : resource_granted('oro_navigation_menu_update_update'),
                'onSelectRoute' : 'oro_navigation_menu_update_update',
                'onMoveRoute' : 'oro_api_move_menuupdates',
                'onRootSelectRoute' : 'oro_navigation_menu_update_view'
            } %}
            <div
                    data-page-component-module="oronavigation/js/app/components/tree-manage-component"
                    data-page-component-options="{{ treeOptions|json_encode }}"
            ></div>
        </div>
    </div>
    <div class="menuitem-data">
        {{ parent() }}
    </div>
{% endblock content_data %}
