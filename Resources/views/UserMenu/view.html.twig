{% extends 'OroNavigationBundle:menuUpdate:view.html.twig' %}


{% set menuViewPath= path('oro_navigation_user_menu_view', {menuName: entity.root.name}) %}
{% set menuCreatePath= path('oro_navigation_user_menu_create', {menuName: entity.root.name}) %}
{% set menuCreateDividerPath= path('oro_navigation_user_menu_create', {menuName: entity.root.name}) %}
{% set saveAndStayButtonAction= path('oro_navigation_user_menu_update', {menuName: entity.root.name, key: entity.name}) %}
{% set onRootSelectRoute = 'oro_navigation_user_menu_view' %}
{% set onSelectRoute = 'oro_navigation_user_menu_update' %}
{% set ownerId = null %}
{% set fullname = app.user|oro_format_name|default('N/A') %}

{% oro_title_set({params : {"%username%": fullname, "%title%": entity.name}}) %}
{% set breadcrumbs = {
    'entity': entity,
    'indexPath': path('oro_user_index'),
    'indexLabel': 'oro.user.entity_plural_label'|trans,
    'additional': [
        {
            'indexPath': path('oro_user_profile_view'),
            'indexLabel': fullname
        },
        {
            'indexPath': path('oro_navigation_user_menu_index'),
            'indexLabel': 'oro.navigation.menuupdate.roots_plural_label'|trans
        }
    ],
    'entityTitle': entity.name
} %}