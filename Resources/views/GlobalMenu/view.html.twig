{% extends 'OroNavigationBundle:menuUpdate:view.html.twig' %}

{% set menuViewPath= path('oro_navigation_global_menu_view', {menuName: entity.root.name}) %}
{% set menuCreatePath= path('oro_navigation_global_menu_create', {menuName: entity.root.name}) %}
{% set menuCreateDividerPath= path('oro_navigation_global_menu_create', {menuName: entity.root.name}) %}
{% set saveAndStayButtonAction= path('oro_navigation_global_menu_update', {menuName: entity.root.name, key: entity.name}) %}
{% set onRootSelectRoute = 'oro_navigation_global_menu_view' %}
{% set onSelectRoute = 'oro_navigation_global_menu_update' %}
{% set ownerId = null %}

{% oro_title_set({params : {"%title%": entity.name}}) %}
{% set breadcrumbs = {
    'entity': entity,
    'indexPath': path('oro_navigation_global_menu_index'),
    'indexLabel': 'oro.navigation.menuupdate.roots_plural_label'|trans,
    'entityTitle': entity.name
} %}
