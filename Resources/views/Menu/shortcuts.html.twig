{% extends 'OroNavigationBundle:Menu:menu.html.twig' %}

{% block list %}
    {% if item.hasChildren and options.depth is not sameas(0) and item.displayChildren %}
        <script type="text/javascript">
            $(function() {
                new navigation.shortcut.MainView({
                    el: '.shortcuts .input-large',
                    source: {{ options.source|json_encode|raw }}
                });
            });
        </script>

        <ul class="nav pull-left shortcuts">
            <li class="divider-vertical extra-divider"></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" title="Get help">{% trans %}Shortcuts{% endtrans %}</a>
                <ul class="dropdown-menu">
                    <li class="nav-header nav-header-title">{% trans %}Shortcuts{% endtrans %}</li>
                    <li class="divider"></li>
                    <li class="dark">
                        <form class="form-inline">
                            <input type="text" placeholder="Enter shortcut action" class="input-large">
                            <button class="btn btn-primary" type="submit">{% trans %}Go{% endtrans %}</button>
                            <div class="clearfix">
                                <div class="extra-small">{% trans %}Example: Create user, Users list{% endtrans %}
                                    <a href="{{ options.details }}">{% trans %}See full list{% endtrans %}</a>
                                </div>
                            </div>
                        </form>
                    </li>
                    <li class="divider"></li>
                    <div class="nav-header">{% trans %}Most Used Actions{% endtrans %}</div>
                    {{ block('children') }}
                </ul>
            </li>
        </ul>
    {% endif %}
{% endblock %}

{% block item %}
    {% if item.extras.isCustomAction is defined %}
        {{ block('item_renderer') }}
    {% endif %}
{% endblock %}
