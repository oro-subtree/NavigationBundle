<script type="text/javascript">
    require(['backbone', 'oro/app', 'oro/navigation'],
    function(Backbone, app, Navigation){
        if (app.hashNavigationEnabled()) {
            /** @type {oro.Navigation} */
            app.hashNavigationInstance = new Navigation({
                baseUrl :  '{{ app.request.getSchemeAndHttpHost() }}',
                headerId : '{{ oro_hash_navigation_header() }}'
            });
            if (!Backbone.History.started) {
                Backbone.history.start();
            }
        }
    });
</script>
